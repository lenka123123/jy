<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F7F9"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="#F5F7F9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@drawable/discount_item_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y25"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y42"
            android:background="@drawable/money_flag_red" />

        <TextView
            android:id="@+id/discount_number"
            android:layout_width="@dimen/x180"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginTop="@dimen/y20"
            android:singleLine="true"
            android:text="5"
            android:textColor="@color/red_fa3e3e"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="@dimen/y350"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/y42"
            android:orientation="vertical">

            <TextView
                android:id="@+id/discount_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="满100减10"
                android:textColor="#333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/discount_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:singleLine="true"
                android:text="2018"
                android:textColor="#999"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0" />

            <ImageView
                android:id="@+id/discount_select"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x40"
                android:src="@drawable/pay_cancel" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>