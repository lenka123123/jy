<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按钮下压样式-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp"></corners>
            <solid android:color="@color/red_fa3e3e"></solid>
            <stroke android:width="8dp" android:color="@color/red_fa3e3e"></stroke>
        </shape>
    </item>
    <!--按钮默认样式-->
    <item>
        <shape>
            <corners android:radius="10dp"></corners>
            <solid android:color="@color/white"></solid>
            <stroke android:width="8dp" android:color="@color/white"></stroke>
        </shape>
    </item>
</selector>