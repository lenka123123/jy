<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/space_10"
    android:paddingLeft="@dimen/space_25"
    android:paddingRight="@dimen/space_25"
    android:paddingTop="@dimen/space_10">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/jobbangclass_item_title"
            android:layout_width="@dimen/space_150"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="法律硕士的基本操作"
            android:textColor="@color/color_3a3a3a_black" />

        <TextView
            android:id="@+id/jobbangclass_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2018/04/04"
            android:textColor="@color/color_A8A8A8_gray"
            android:textSize="@dimen/font_size_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/jobbangclass_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="15.00元"
        android:textColor="@color/color_E54F2A_red"
        android:textSize="@dimen/font_size_12" />
</RelativeLayout>
