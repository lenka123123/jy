<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_70"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/space_10">


        <ImageView
            android:id="@+id/add_friend"
            android:layout_width="@dimen/x138"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/space_18"
            android:paddingTop="@dimen/space_18"
            android:src="@drawable/add_friend" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x78"
            android:gravity="center"
            android:text="校内圈"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/newcampusfragment_fun"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="趣事"
            android:textColor="@drawable/maintextcolorselector"
            android:textSize="@dimen/font_size_12" />

        <RadioButton
            android:id="@+id/newcampusfragment_help"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="互助"

            android:textColor="@drawable/maintextcolorselector"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/newcampusfragment_give"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="转让"
            android:textColor="@drawable/maintextcolorselector"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone" />


    </RadioGroup>

    <include layout="@layout/include_line_gray" />

    <FrameLayout
        android:id="@+id/newcampusfragment_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none" />

</LinearLayout>
