<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/incluce_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/releasehelpeachother_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/new_input_line"
            android:gravity="center|left"
            android:hint="@string/releasehelpeachother_choicetype"
            android:paddingLeft="@dimen/space_20"
            android:singleLine="true"
            android:textSize="@dimen/font_size_14" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

            <EditText
                android:id="@+id/releasehelpeachother_helppeoplenum"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/new_input_line"
                android:hint="@string/releasehelpeachother_helppeoplenum"
                android:inputType="number"
                android:paddingLeft="@dimen/space_20"
                android:singleLine="true"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/releasehelpeachother_ispay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/new_input_line"
                android:gravity="center|left"
                android:hint="@string/releasehelpeachother_ispay"
                android:paddingLeft="@dimen/space_20"
                android:singleLine="true"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/releasehelpeachother_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/new_input_line"
                android:gravity="center|left"
                android:hint="@string/releasehelpeachother_gender"
                android:paddingLeft="@dimen/space_20"
                android:singleLine="true"
                android:textSize="@dimen/font_size_14" />

            <EditText
                android:id="@+id/releasehelpeachother_paymoney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/new_input_line"
                android:hint="@string/releasehelpeachother_inputmoney"
                android:inputType="number"
                android:paddingLeft="@dimen/space_20"
                android:singleLine="true"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <EditText
                android:id="@+id/releasehelpeachother_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/new_input_line"
                android:hint="@string/releasehelpeachother_inputtitle"
                android:maxLength="12"
                android:paddingLeft="@dimen/space_20"
                android:singleLine="true"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <EditText
                android:id="@+id/releasehelpeachother_addcaontant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/new_myreume_selfassessment"
                android:gravity="left|top"
                android:hint="@string/releasehelpeachother_addcontant"
                android:maxLength="200"
                android:maxLines="200"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:textSize="@dimen/font_size_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/caninput"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/releasehelpeachother_wordnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textColor="@color/color_E14222"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/words"
                        android:textColor="@color/color_b4b4b4_gray"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/releasehelpeachother_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_20"
                    android:background="@drawable/new_myresume_clean" />
            </RelativeLayout>

            <TextView
                android:id="@+id/releasehelpeachother_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/textview_round2"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
