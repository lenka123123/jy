<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/campusinterestingdetail_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/incluce_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_60"
        android:layout_marginTop="@dimen/space_51">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/campusinterestingdetail_title"
                android:layout_width="@dimen/space_220"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:gravity="center"
                android:text="关于考研复习的三大误区"
                android:textColor="@color/color_3a3a3a_black"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/campusinterestingdetail_companyanddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_5"
                android:gravity="center"
                android:text="就业邦 发布于2018年4月10日 10:00"
                android:textColor="@color/color_C5C5C5_gray"
                android:textSize="@dimen/font_size_12" />

            <ImageView
                android:id="@+id/campusinterestingdetail_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/campusinterestingdetail_caontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/space_20">


        <EditText
            android:id="@+id/search_writemessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_round_nobg"
            android:drawableRight="@drawable/edittext_drawable"
            android:hint="写留言..."
            android:imeOptions="actionSend"
            android:singleLine="true"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/campusinterestingdetail_messagelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_10">

                <ImageView
                    android:id="@+id/campusinterestingdetail_message"
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:padding="@dimen/space_5"
                    android:src="@drawable/new_find_comments" />

                <TextView
                    android:id="@+id/campusinterestingdetail_messagenum"
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_roundmessage"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="11111"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_8" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/campusinterestingdetail_iscollection"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:background="@drawable/new_find_uncollection"
                android:padding="@dimen/space_5" />

            <ImageView
                android:id="@+id/campusinterestingdetail_share"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@drawable/new_find_unshare"
                android:padding="@dimen/space_5"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
