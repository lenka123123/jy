<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_bg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/incluce_common_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_30"
            android:background="@color/color_c4c4c4_half"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已绑定手机号 "
                android:textColor="@color/color_e3e3e3" />

            <TextView
                android:id="@+id/updatapwd_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="13333333333"
                android:textColor="@color/color_e3e3e3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/layoutset_20_10_20_10_mw"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_20">

                <EditText
                    android:id="@+id/updatapwd_pwd_1"
                    style="@style/Edit_register_login"
                    android:layout_centerVertical="true"
                    android:hint="@string/input_pwd_6_12"
                    android:inputType="textPassword"
                    android:maxLength="12" />

                <ToggleButton
                    android:id="@+id/updatapwd_pwd_1_isshowpwd"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_50"
                    android:background="@drawable/pswseclector"
                    android:padding="10dp"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5">

                <EditText
                    android:id="@+id/updatapwd_pwd_2"
                    style="@style/Edit_register_login"
                    android:layout_centerVertical="true"
                    android:hint="@string/input_pwd_6_12"
                    android:inputType="textPassword"
                    android:maxLength="12" />

                <ToggleButton
                    android:id="@+id/updatapwd_pwd_2_isshowpwd"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_50"
                    android:background="@drawable/pswseclector"
                    android:padding="10dp"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_5">

            <EditText
                android:id="@+id/updatapwd_verification_code"
                style="@style/Edit_register_login"
                android:layout_centerVertical="true"
                android:hint="@string/text_verification_code"
                android:inputType="number"
                android:maxLength="6" />

            <com.example.framwork.widget.TimeButton
                android:id="@+id/updatapwd_get_verification_code"
                android:layout_width="@dimen/space_80"
                android:layout_height="@dimen/space_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_50"
                android:background="@drawable/roundtextview"
                android:text="@string/text_get_code"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_20">

            <TextView
                android:id="@+id/updatapwd_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginRight="@dimen/space_30"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
