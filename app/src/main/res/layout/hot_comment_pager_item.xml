<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y260">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#666"
                android:scaleType="fitXY"
                android:src="@drawable/background_img" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/y56"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:src="@drawable/back_black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x235"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="微微按"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/follw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1226万阅读  4200讨论"
                android:textColor="#333"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/y30"
            android:gravity="left|top"
            android:text="content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y17"
            android:background="#F7F7F7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:text="热门"
            android:textColor="@color/red_fa3e3e" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.5"
            android:background="#DDDDDD" />

    </LinearLayout>

    <ImageView
        android:id="@+id/my_photo"
        android:layout_width="@dimen/x175"
        android:layout_height="@dimen/y175"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y180"
        android:scaleType="fitXY" />


</RelativeLayout>


