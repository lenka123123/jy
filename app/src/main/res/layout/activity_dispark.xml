<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nanjing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/y26"
            android:src="@drawable/back" />

        <LinearLayout
            android:id="@+id/fragment_home_adress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_home_adressName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"

                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="选择分享范围"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/finish"
                android:layout_width="@dimen/x120"
                android:layout_height="match_parent"
                android:text="完成"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/fragment_home_arrow"
                android:layout_width="@dimen/x120"
                android:layout_height="match_parent"

                android:src="@drawable/arrow_down_black"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/home_search_layout"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:background="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="@color/black" />


            <ImageView
                android:id="@+id/home_search"
                android:layout_width="@dimen/x30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/y30"
                android:src="@drawable/black_search" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:background="#EDEDED" />

    <LinearLayout
        android:id="@+id/dispark_img_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dispark_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x40"
            android:background="@drawable/pay_select"

            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="公开"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical|top"
                android:text="所有人可见"
                android:textColor="#888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:background="#EDEDED" />

    <LinearLayout
        android:id="@+id/school_img_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/school_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x40"
            android:background="@drawable/pay_select"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="大学"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical|top"
                android:text="所在大学可见"
                android:textColor="#888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:background="#EDEDED" />

    <LinearLayout
        android:id="@+id/club_img_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/club_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x40"
            android:background="@drawable/pay_select"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="社团"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical|top"
                android:text="仅社团成员可见"
                android:textColor="#888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
