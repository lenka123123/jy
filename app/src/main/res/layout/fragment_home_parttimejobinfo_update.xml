                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="男"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="年龄限制："
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/need_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="22-55"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="薪资类型："
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fragment_home_parttimejobinfo_jie"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="日结"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="经验要求："
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fragment_home_parttimejobinfo_workexp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="无"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="是否面试："
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/need_face"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="是"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="是否连做："
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/need_continuous"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="是"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="上班时间："
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fragment_home_parttimejobinfo_workdate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="left|top"
                        android:text="周末"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


