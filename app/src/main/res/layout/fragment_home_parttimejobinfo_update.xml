    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/fragment_home_parttimejobinfo_collectionimglayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fragment_home_parttimejobinfo_collectionimg"
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:background="@drawable/new_find_uncollection"
                    android:padding="@dimen/space_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="@color/color_BBBBBB_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_home_parttimejobinfo_sharelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:background="@drawable/new_find_unshare"
                    android:padding="@dimen/space_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转发"
                    android:textColor="@color/color_BBBBBB_gray" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_home_parttimejobinfo_sendresume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/textview_round"
            android:gravity="center"
            android:text="投递简历"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
