                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_home_parttimejobinfo_title"
                            android:layout_width="@dimen/x300"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_20"
                            android:layout_weight="1"
                            android:text="兼职家教"
                            android:textColor="@color/black"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/fragment_home_parttimejobinfo_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/y10"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="150/天"
                            android:textColor="@color/color_E14222" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fragment_home_parttimejobinfo_adressanddate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="南京市 鼓楼区"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/y10">

                        <TextView
                            android:id="@+id/lock_person_number"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="浏览11人"
                            android:textColor="#B3B3B3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/apply_person_number"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="申请11人"
                            android:textColor="#B3B3B3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/ago"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:gravity="right"
                            android:text="刚刚"
                            android:textColor="@color/position_select"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y10"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布企业："
                            android:textColor="@color/color_878787_gray"
                            android:textSize="@dimen/font_size_12" />

                        <TextView
                            android:id="@+id/fragment_home_parttimejobinfo_companyname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="     "
                            android:textColor="@color/color_878787_gray"
                            android:textSize="@dimen/font_size_12" />

                        <ImageView
                            android:id="@+id/fragment_home_parttimejobinfo_isrealname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10"
                            android:background="@drawable/new_areadyrealname" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:drawableLeft="@drawable/new_joninjyb_img"
                        android:drawablePadding="@dimen/space_5"
                        android:text="现在入驻就业邦高新人才随心招"
                        android:textColor="@color/color_878787_gray"
                        android:textSize="@dimen/font_size_12"
                        android:visibility="gone" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
