<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/y600"
        android:layout_height="@dimen/y290"
        android:background="@drawable/shape_corner"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/y600"
            android:layout_height="@dimen/y200"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:textSize="16sp"
            android:paddingRight="@dimen/x20"
            android:text="请在应用的权限管理中将使用录音选项设置为允许，否则将无法使用录音功能" />

        <View
            android:layout_width="@dimen/y400"
            android:layout_height="@dimen/y1"
            android:background="@color/color_e3e3e3" />

        <LinearLayout
            android:layout_width="@dimen/y400"
            android:layout_height="@dimen/y90"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/club_join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/blue_btn_pressed" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
