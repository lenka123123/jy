<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header_info"
        layout="@layout/incluce_common_title" />

    <include
        layout="@layout/common_refresh_super_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_65"
        android:layout_below="@+id/header_info" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_65"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="@dimen/space_20">

        <EditText
            android:id="@+id/homeandfindhelpeachotherdetailhead_writemessage"
            android:layout_width="@dimen/space_200"
            android:layout_height="@dimen/space_50"
            android:background="@drawable/edittext_round_nobg"
            android:drawableRight="@drawable/edittext_drawable"
            android:hint="写留言..."
            android:imeOptions="actionSend"
            android:singleLine="true"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/homeandfindhelpeachotherdetailhead_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginRight="@dimen/space_10">

                <ImageView
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:padding="@dimen/space_5"
                    android:src="@drawable/new_find_comments" />

                <TextView
                    android:id="@+id/homeandfindhelpeachotherdetailhead_messagenum"
                    android:layout_width="@dimen/space_12"
                    android:layout_height="@dimen/space_12"
                    android:background="@drawable/textview_roundmessage"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="11111"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_8" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/homeandfindhelpeachotherdetailhead_share"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@drawable/new_find_unshare"
                android:padding="@dimen/space_5" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
