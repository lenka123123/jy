<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/club_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/x75"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ranking_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x15"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ranking_up_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x2"
                    android:paddingLeft="@dimen/x5"
                    android:privateImeOptions="x5"
                    android:text="▼"
                    android:textColor="@color/red_fa3e3e"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/ranking_up_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y7"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/red_fa3e3e"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/x101"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ranking_logo"
                android:layout_width="@dimen/x101"
                android:layout_height="@dimen/y101"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ranking_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东南大学"
                android:textColor="#333"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/ranking_school_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y9"
                android:text="100人"
                android:textColor="#999"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ranking_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="100"
                android:textColor="#F63F1A" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:layout_marginLeft="@dimen/x221"
        android:layout_marginRight="@dimen/x40"
        android:background="#DDDDDD" />
</LinearLayout>
