<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/compus_list_lift_icon"
            android:drawablePadding="@dimen/space_10"
            android:paddingBottom="@dimen/space_10"
            android:paddingLeft="@dimen/space_20"
            android:paddingTop="@dimen/space_10"
            android:text="校园趣事"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_campus_campusintertingrefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/campus_refresh"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center"
            android:paddingBottom="@dimen/space_10"
            android:paddingRight="@dimen/space_20"
            android:paddingTop="@dimen/space_10"
            android:text="刷新"
            android:textColor="@color/black" />
    </RelativeLayout>

    <include
        layout="@layout/include_line_gray"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/fragment_campus_campusintertingListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_10"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:paddingTop="@dimen/space_10"
        zhy:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>
    <!-- campus_funthing_item -->

</LinearLayout>
