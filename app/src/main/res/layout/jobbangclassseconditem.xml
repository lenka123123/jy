<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jobbangclassseconditem"
    style="@style/layoutset_20_10_20_10_mw">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jobbangclassseconditem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:singleLine="true"
            android:text="怎样找到工作？"
            android:textColor="@color/color_3a3a3a_black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/jobbangclassseconditem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:singleLine="true"
            android:text="2018/05/04"
            android:textColor="@color/color_A8A8A8_gray"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/jobbangclassseconditem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="免费"
        android:textColor="@color/color_E54F2A_red" />
</RelativeLayout>
