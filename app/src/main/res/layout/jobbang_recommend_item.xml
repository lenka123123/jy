<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/jobbangclassseconditem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y125"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/x180"
            android:background="@drawable/logo"
            android:layout_height="@dimen/y125"
            android:layout_marginLeft="@dimen/x40"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x27"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="2018/04/04"
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/jobbangclass_item_title"
                android:layout_width="@dimen/space_150"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="法律硕士的基本操作"
                android:textColor="#3a3a3a"
                android:textSize="15sp" />

            <TextView

                android:id="@+id/jobbangclass_item_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="2018/04/04"
                android:textColor="#999"
                android:textSize="@dimen/font_size_12" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/jobbangclass_item_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y145"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x40"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="15.00元"
        android:textColor="@color/color_E54F2A_red"
        android:textSize="@dimen/font_size_12" />


</RelativeLayout>
