<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sifturneed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/incluce_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sifturneed_industry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_40"
                android:background="@drawable/new_input_line"
                android:drawableRight="@drawable/new_arrow_choicemore"
                android:gravity="center|left"
                android:hint="选择行业"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:singleLine="true"
                android:textColor="@color/color_535353_black"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/sifturneed_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_input_line"
                android:drawableRight="@drawable/new_arrow_choicemore"
                android:gravity="center|left"
                android:hint="选择薪资"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:singleLine="true"
                android:textColor="@color/color_535353_black"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/sifturneed_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_input_line"
                android:drawableRight="@drawable/new_arrow_choicemore"
                android:gravity="center|left"
                android:hint="选择地区"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:singleLine="true"
                android:textColor="@color/color_535353_black"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/sifturneed_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_input_line"
                android:drawableRight="@drawable/new_arrow_choicemore"
                android:gravity="center|left"
                android:hint="选择排序"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:singleLine="true"
                android:textColor="@color/color_535353_black"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <Button
                android:id="@+id/sifturneed_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_buttonbg_on"
                android:gravity="center"
                android:text="选择完成"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sifturneed_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_5"
                android:background="@drawable/new_buttonbg_off"
                android:gravity="center"
                android:text="跳过此步骤"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_50" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>