<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newcampany"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y274"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/active_item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y258"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/x260"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <!--中间内容-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y60"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="南大话剧社聚会"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26"
                android:drawableLeft="@drawable/hot_active_time"
                android:drawablePadding="@dimen/x10"
                android:text="周二 10/09 17:30"
                android:textColor="#999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:drawableLeft="@drawable/hot_active_address"
                android:drawablePadding="@dimen/x16"
                android:text="周二 10/09 17:30"
                android:textColor="#999"
                android:textSize="14sp" />


        </LinearLayout>

        <!--最右边-->
        <LinearLayout

            android:layout_width="@dimen/x140"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y130"
            android:orientation="vertical">

            <TextView
                android:id="@+id/free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="免费"
                android:textColor="@color/red_fa3e3e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/y40"
                android:drawableLeft="@drawable/hot_active_preson"
                android:drawablePadding="@dimen/x4"
                android:text="23"
                android:textColor="#999"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="#F5F7F9" />


</LinearLayout>
