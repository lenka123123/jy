<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newcampany"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F9"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/incluce_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/tab_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tab_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我发布的"
                    android:textColor="@color/red_fa3e3e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tab_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我投递的"
                    android:textColor="#333"
                    android:textSize="16sp" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y16"
                android:background="#F5F7F9" />


            <!--s 申请主题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="申请主题"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入"
                        android:textColor="#808080"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="#F5F7F9" />


            <!--活动类别-->
            <LinearLayout
                android:id="@+id/active_type_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="所属社团"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/active_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="@dimen/x12"
                        android:layout_height="@dimen/y21"
                        android:layout_marginLeft="@dimen/x20"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="#F5F7F9" />

            <!--姓名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入"
                        android:textColor="#808080"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="#F5F7F9" />

            <!--电话 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="电话"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="#808080"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="#F5F7F9" />

            <!--申请金额 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="申请金额"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入"
                        android:textColor="#808080"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="#F5F7F9"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x40"
                android:text="物品需求"
                android:textColor="#333" />

            <EditText
                android:id="@+id/googs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:hint="如有物品需要，输入您所需要的物品"
                android:minHeight="@dimen/y200"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:paddingTop="@dimen/y10"
                android:textSize="14sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="#F5F7F9"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x40"
                android:text="申请原因"
                android:textColor="#333" />

            <EditText
                android:id="@+id/cause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:hint="请输入详细的申请原因"
                android:minHeight="@dimen/y200"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:paddingTop="@dimen/y10"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="#F5F7F9" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="#F5F7F9">

                <TextView
                    android:id="@+id/apply"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginRight="@dimen/x40"
                    android:layout_marginTop="@dimen/y60"
                    android:background="@drawable/textview_round2"
                    android:gravity="center"
                    android:text="申请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
