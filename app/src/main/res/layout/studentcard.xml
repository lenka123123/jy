<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/incluce_common_title" />

    <com.mcxtzhang.swipemenulib.customview.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_70"
        android:layout_marginTop="@dimen/space_51"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/studentcard_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_input_line"
                android:hint="@string/myreumeinputstudentnum"
                android:paddingLeft="@dimen/space_20"
                android:singleLine="true"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />


            <ImageView
                android:id="@+id/studentcard_img"
                android:layout_width="@dimen/space_270"
                android:layout_height="@dimen/space_200"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_20"
                android:scaleType="fitXY" />
            <!--         android:background="@drawable/new_input_studentcard"-->
            <TextView
                android:id="@+id/studentcard_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginRight="@dimen/space_30"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

        </LinearLayout>

    </com.mcxtzhang.swipemenulib.customview.MyScrollView>
</RelativeLayout>
