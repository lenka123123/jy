<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/incluce_common_title" />

    <RadioGroup
        android:id="@+id/main_tab_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:visibility="gone"
            android:id="@+id/search_funny"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="趣事"
            android:textColor="@drawable/radiobuttontextcolor" />

        <RadioButton
            android:id="@+id/searchresult_infomation"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资讯"
            android:checked="true"
            android:textColor="@drawable/radiobuttontextcolor" />

        <RadioButton
            android:id="@+id/searchresult_test"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试卷"
            android:textColor="@drawable/radiobuttontextcolor" />

        <RadioButton
            android:id="@+id/searchresult_secret"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秘籍"
            android:textColor="@drawable/radiobuttontextcolor" />

        <RadioButton
            android:id="@+id/searchresult_strategy"
            style="@style/MTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="攻略"
            android:textColor="@drawable/radiobuttontextcolor" />
    </RadioGroup>
    <include layout="@layout/include_line_gray_5" />

    <FrameLayout
        android:id="@+id/searchresult_framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
