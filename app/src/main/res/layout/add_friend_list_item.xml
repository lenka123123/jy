<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y235"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y17"
        android:background="#F7F7F7" />

    <TextView
        android:id="@+id/separate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x20"
        android:background="@color/white"
        android:gravity="bottom"
        android:text="标题" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y120"
            android:layout_marginBottom="@dimen/y31"
            android:layout_marginLeft="@dimen/x38"
            android:layout_marginTop="@dimen/y32"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="@dimen/x370"
            android:layout_height="@dimen/y108"
            android:layout_marginBottom="@dimen/y31"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y32"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#2018世界杯#"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y22"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="##"
                android:textColor="#808080"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addfollow"
                android:layout_width="@dimen/x101"
                android:layout_height="@dimen/y53"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/x40"
                android:layout_marginTop="@dimen/y52"
                android:background="@drawable/attention_add"
                android:gravity="center"
                android:text="＋关注"
                android:textColor="#F63F1A" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
