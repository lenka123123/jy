<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y17"
        android:background="#f7f7f7" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:layout_below="@+id/view"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newcampayfunitem_uesericon"
            android:layout_width="@dimen/x76"
            android:layout_height="@dimen/y75"
            android:layout_marginBottom="@dimen/y7"
            android:layout_marginLeft="@dimen/x38"
            android:layout_marginTop="@dimen/y14"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y96"
            android:layout_marginLeft="@dimen/x20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newcampayfunitem_uesername"
                android:layout_width="@dimen/space_180"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/y22"
                android:singleLine="true"
                android:text="微微安"
                android:textColor="@color/color_3a3a3a_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/newcampayfunitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/y3"
                android:gravity="right"
                android:text="28分钟前"
                android:textColor="#b3b3b3"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addfollow"
                android:layout_width="@dimen/x101"
                android:layout_height="@dimen/y53"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/x40"
                android:layout_marginTop="@dimen/y32"
                android:background="@drawable/attention_add"
                android:gravity="center"
                android:text="＋关注"
                android:textColor="#F63F1A" />
        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/newcampayfunitem_caontant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="@dimen/y41"
        android:layout_marginRight="@dimen/y42"
        android:layout_marginTop="@dimen/space_5"
        android:text="测试内容"
        android:textSize="14sp" />

    <sinia.com.baihangeducation.newcampus.tabs.friend.NineGridView
        android:id="@+id/nine_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/newcampayfunitem_caontant"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY" />


    <View
        android:id="@+id/ffview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:layout_below="@+id/nine_grid_view"
        android:background="#F7F7F7" />

    <LinearLayout
        android:id="@+id/linearlayut_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:layout_below="@+id/ffview"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x40"
            android:layout_weight="1"
            android:gravity="left|top"
            android:text="转发 22"
            android:textColor="#999" />

        <TextView
            android:id="@+id/tv_chat_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="3"
            android:gravity="left|top"
            android:text="评论 22"
            android:textColor="#999" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x14"
            android:layout_weight="1"
            android:gravity="left|top"
            android:text="赞 33"
            android:textColor="#999" />

    </LinearLayout>


</RelativeLayout>

