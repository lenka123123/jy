<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/incluce_common_title" />

            <RelativeLayout
                android:id="@+id/releaseinteresting_outimglayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_200"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_myreume_selfassessment">

                <ImageView
                    android:id="@+id/releaseinteresting_outimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:gravity="center">
                </ImageView>
                <ImageView
                    android:id="@+id/releaseinteresting_inimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/new_uparticle_bg" />
            </RelativeLayout>

            <EditText
                android:id="@+id/releaseinteresting_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_input_line"
                android:ellipsize="end"
                android:gravity="center|left"
                android:hint="@string/myrelease_inputtitle"
                android:paddingLeft="@dimen/space_20"
                android:singleLine="true"
                android:textColor="@color/color_535353_black"
                android:textColorHint="@color/color_afafaf_gray"
                android:textSize="@dimen/font_size_14" />

            <EditText
                android:id="@+id/releaseinteresting_contant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/new_myreume_selfassessment"
                android:gravity="left|top"
                android:hint="@string/pleaseinput"
                android:maxLength="200"
                android:maxLines="200"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/releaseinteresting_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/textview_round2"
                android:gravity="center"
                android:text="确认发布"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
