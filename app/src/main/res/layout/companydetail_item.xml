<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/companydetail_item"
    style="@style/layoutset_20_10_20_10_mw">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/companydetail_item_img"
            android:layout_width="@dimen/space_50"
            android:layout_height="@dimen/space_50"
            android:background="@drawable/new_head_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/companydetail_item_title"
                android:layout_width="@dimen/space_150"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="诚聘服务员"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14"/>

            <TextView
                android:id="@+id/companydetail_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:singleLine="true"
                android:textSize="@dimen/font_size_12"
                android:text="南京市 秦淮区 2018/03/08"
                android:textColor="@color/color_999999" />


            <TextView
                android:id="@+id/companydetail_item_adressanddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:singleLine="true"
                android:textSize="@dimen/font_size_12"
                android:text="南京市 秦淮区 2018/03/08"
                android:textColor="@color/color_999999" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_20"
        android:gravity="center">

        <TextView
            android:id="@+id/companydetail_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/color_E14222" />

    </LinearLayout>
</RelativeLayout>
