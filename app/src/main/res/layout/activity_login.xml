<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="@dimen/y20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80">

                <ImageView
                    android:src="@drawable/back"
                    android:id="@+id/back"
                    android:layout_gravity="left"
                      android:padding="@dimen/x22"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:text="登录"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_50"
                android:background="@drawable/new_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_50">

                    <EditText
                        android:id="@+id/edt_phone_num"
                        style="@style/Edit_register_login"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/new_login_username"
                        android:hint="@string/input_phone_num"
                        android:inputType="number"
                        android:maxLength="11" />

                    <Button
                        android:id="@+id/bt_login_delete"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/space_50"
                        android:background="@drawable/new_login_delete" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_20">

                    <EditText
                        android:id="@+id/edt_password"
                        style="@style/Edit_register_login"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/new_login_password"
                        android:hint="@string/input_pwd"
                        android:inputType="textPassword"
                        android:maxLength="12" />

                    <Button
                        android:id="@+id/bt_login_isshowpwd"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/space_50"
                        android:background="@drawable/new_login_unshowpwd" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_marginLeft="@dimen/space_30"
                    android:layout_marginRight="@dimen/space_30"
                    android:layout_marginTop="@dimen/space_20"
                    android:background="@drawable/btn_selector"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:padding="@dimen/space_10"
                        android:text="@string/register_new_user"
                        android:textColor="@color/word_cccccc" />

                    <TextView
                        android:id="@+id/tv_forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_20"
                        android:padding="@dimen/space_10"
                        android:text="@string/forget_pwd"
                        android:textColor="@color/color_999999" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_30"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_1"
                    android:layout_weight="1"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_20"
                    android:gravity="center"
                    android:text="@string/mine_third_login"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_18" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_1"
                    android:layout_weight="1"
                    android:background="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_login_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_login_wechat" />

                <TextView
                    android:id="@+id/tv_login_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_50"
                    android:background="@drawable/new_login_qq" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>