<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y158"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/x96"
            android:layout_height="@dimen/y95"
            android:layout_marginBottom="@dimen/y31"
            android:layout_marginLeft="@dimen/x38"
            android:layout_marginTop="@dimen/y32"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y108"
            android:layout_marginBottom="@dimen/y31"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y32"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#2018世界杯#"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y22"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="##"
                android:textColor="#808080"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_line_half_gray" />


</LinearLayout>
