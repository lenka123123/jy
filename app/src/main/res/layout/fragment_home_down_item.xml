<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_down_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_10"
    android:paddingLeft="@dimen/space_20"
    android:paddingRight="@dimen/space_20"
    android:paddingTop="@dimen/space_10">

    <TextView
        android:id="@+id/fragment_home_down_item_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="当前城市暂无职位信息，请尝试切换其他城市。"
        android:textSize="@dimen/font_size_12"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fragment_home_down_item_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fragment_home_down_item_img"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/y68"
            android:layout_marginTop="@dimen/y20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_home_down_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="诚聘服务员"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_width="@dimen/x62"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/show_club_job"
                        android:layout_width="@dimen/x62"
                        android:layout_height="@dimen/y28"
                        android:layout_gravity="center"
                        android:background="@drawable/club_job" />

                </LinearLayout>


                <TextView
                    android:id="@+id/fragment_home_down_item_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="100"
                    android:textColor="@color/color_E14222" />
            </LinearLayout>


            <TextView
                android:id="@+id/fragment_home_down_item_adressandtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y12"
                android:singleLine="true"
                android:text="南京市 秦淮区"
                android:textColor="#A7A7A7"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y12"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lock_person_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F7F7F7"
                    android:text="浏览人数"
                    android:textColor="@color/position_select"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/apply_person_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:background="#F7F7F7"
                    android:text="申请人数"
                    android:textColor="@color/position_select"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/x10"
                    android:gravity="right"
                    android:text="3分钟前"
                    android:textColor="@color/position_select"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fragment_home_down_item_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_daily" />

                <ImageView
                    android:id="@+id/fragment_home_down_item_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@drawable/new_truename" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_20"
        android:gravity="center"
        android:visibility="gone">


    </LinearLayout>
</LinearLayout>
