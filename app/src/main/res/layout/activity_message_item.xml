<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/club_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:text="10:10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:background="@drawable/system_message" />

        <RelativeLayout
            android:id="@+id/mmmm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x30"
            android:layout_weight="1"
            android:background="@drawable/shape_corner"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y20"
                android:maxLines="2"
                android:text="title"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/club"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_below="@+id/title"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y20"
                android:maxLines="2"
                android:text="club"
                android:textColor="#666"
                android:textSize="13sp" />

            <View
                android:id="@+id/is_show_layout_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_below="@+id/club"
                android:background="@color/color_eeeeee_gray"
                android:gravity="bottom" />

            <LinearLayout
                android:id="@+id/is_show_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_below="@+id/is_show_layout_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="接受"
                    android:textColor="@color/red_fa3e3e"
                    android:textSize="13sp" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="@color/color_eeeeee_gray" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="拒绝"
                    android:textColor="@color/red_fa3e3e"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>