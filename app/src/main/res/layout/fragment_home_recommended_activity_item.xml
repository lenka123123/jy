<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_recommended_activity_item"
    style="@style/layoutset_20_10_20_10_mw"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_home_recommended_activity_item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_180"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_5">

        <TextView
            android:id="@+id/fragment_home_recommended_activity_item_commpany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="就业邦培训"
            android:textColor="@color/color_3a3a3a_black" />

        <TextView
            android:id="@+id/fragment_home_recommended_activity_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018/03/25"
            android:textColor="@color/color_C5C5C5_gray" />
    </LinearLayout>

</LinearLayout>
