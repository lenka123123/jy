<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newcampayfunitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_10"
    android:paddingLeft="@dimen/space_20"
    android:paddingRight="@dimen/space_20"
    android:paddingTop="@dimen/space_10">
    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="暂无数据。。。"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/newcampayfunitem_uesericon"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/newcampayfunitem_uesername"
                    android:layout_width="@dimen/space_180"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="求帅哥帮忙拿快递，谢谢！"
                    android:textColor="@color/color_3a3a3a_black" />

            </RelativeLayout>


            <TextView
                android:id="@+id/newcampayfunitem_caontant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:text="测试内容"
                android:textSize="@dimen/font_size_12" />

            <com.lzy.ninegrid.NineGridView
                android:id="@+id/newcampayfunitem_nineimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:ngv_gridSpacing="5dp"
                app:ngv_maxSize="9"
                app:ngv_mode="fill"
                app:ngv_singleImageRatio="1"
                app:ngv_singleImageSize="150dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10">

                <TextView
                    android:id="@+id/newcampayfunitem_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="28分钟前"
                    android:textSize="@dimen/font_size_10" />

                <LinearLayout
                    android:id="@+id/newcampayfunitem_more"
                    android:layout_width="@dimen/space_60"
                    android:layout_height="@dimen/space_20"
                    android:layout_alignParentRight="true"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/point"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_20"
                        android:src="@drawable/new_morepoint" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/newcampayfunitem_praiser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/new_praise_icon"
                android:drawablePadding="@dimen/space_5"
                android:gravity="center_vertical"
                android:text="点赞名字"
                android:textColor="@color/color_3f4c85_blue"
                android:textSize="@dimen/font_size_10" />

            <com.mcxtzhang.swipemenulib.customview.NoScrollListView
                android:id="@+id/newcampayfunitem_datalist"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="@dimen/space_20">

            </com.mcxtzhang.swipemenulib.customview.NoScrollListView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
